---
import NavBar from "../components/navbar.vue";
import Simpledescription from "../components/simpledescription.astro";
import Footer from "../components/footer.astro";
const { frontmatter } = Astro.props;


---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title}</title>


	</head>
	<body>
		<NavBar client:load></NavBar>
    <main>

		<section class="notice-details">
			<Simpledescription className="simple-description-transparent">
              <slot/>
           </Simpledescription>
		</section>
      
    </main>
	<Footer></Footer>
	</body>
</html>
<style is:global>

@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap');

:root{

	--gradient-olive:linear-gradient(45deg, #1c4626 0%, #FFFB7D 100%);
	--gradient-olive-dark:linear-gradient(43deg, #c58931 0%, #7f4e15 46%, #5a3119 100%);
	--gradient-purple:linear-gradient(43deg, #41094c 0%, #3f073c 46%, #9a28a4 100%);
	--dark-background :hsla(0, 0%, 0%, 0.7);
	--ff-bebas:'Bebas Neue';
	--shadow-olive: 10px 10px 110px 12px rgba(173,199,6,0.87);
	--shadow-black:  3px 3px 52px 0px rgba(0,0,0,0.75);


}    


*,
*::before,
*::after {
  box-sizing: border-box;
}

* {
  margin: 0;
  padding: 0;
}

html {
  font-family: "Roboto",system-ui;
  color-scheme: light ;
  scroll-behavior: smooth;
  
}

.notice-details{
	min-height: 100vh;
	display: grid;
	place-content: center;
	
	
	&>*{
		margin: auto;
	}
	
}
h2{
	margin-block: 20px;
}

ol, ul {
            margin-left: 1em;  /* Asegura que las listas estén alineadas con los párrafos */
            padding: 10px;    /* Elimina el padding por defecto */
            list-style-position: inside; /* Hace que el marcador esté dentro del contenedor <li> */
        }
li{
	margin-top: 5px;
}

img{
	max-width: 50%;
}

p:nth-of-type(1){

	margin-top: 100px;

}


</style>


